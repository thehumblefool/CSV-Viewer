<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="mainWindow" prefHeight="425.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
   <top>
      <HBox prefHeight="30.0" prefWidth="425.0" BorderPane.alignment="CENTER">
            <Button fx:id="selectDirectory" mnemonicParsing="false" onAction="#loadFiles" prefHeight="26.0" prefWidth="103.0" text="Open...">
            <HBox.margin>
               <Insets bottom="2.0" left="1.0" right="1.0" top="2.0" />
            </HBox.margin></Button>
            <ComboBox fx:id="selectFile" onAction="#loadColumns" prefHeight="26.0" prefWidth="194.0" promptText="Select Files">
            <padding>
               <Insets left="2.0" />
            </padding>
            <HBox.margin>
               <Insets bottom="2.0" left="1.0" right="1.0" top="2.0" />
            </HBox.margin></ComboBox>
            <MenuButton fx:id="selectColumns" alignment="CENTER" mnemonicParsing="false" onAction="#loadData" prefHeight="26.0" prefWidth="193.0" text="Select Columns">
            <HBox.margin>
               <Insets bottom="2.0" left="1.0" right="1.0" top="2.0" />
            </HBox.margin></MenuButton>
            <Button mnemonicParsing="false" onAction="#loadData" text="Submit">
            <HBox.margin>
               <Insets bottom="2.0" left="1.0" right="1.0" top="2.0" />
            </HBox.margin></Button>
      </HBox>
   </top>
   <center>
      <TableView fx:id="table" prefHeight="395.0" prefWidth="700.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
